<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TableLayout
    android:id="@+id/simpleTableLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    tools:ignore="UselessParent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="3dp">

            <TextView
                android:id="@+id/txtBmiDate"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="@string/txt"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtBmiWeight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtBmiWeight"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/txt"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtBmiHeight"
                app:layout_constraintStart_toEndOf="@+id/txtBmiDate"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtBmiHeight"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="@string/txt"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtBmiValue"
                app:layout_constraintStart_toEndOf="@+id/txtBmiWeight"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/txtBmiValue"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/txt"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtBmiType"
                app:layout_constraintStart_toEndOf="@+id/txtBmiHeight"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtBmiType"
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:text="@string/txt"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtBmiValue"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</TableLayout>
</RelativeLayout>